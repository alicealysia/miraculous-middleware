{

  "include": [
    "src/**/*.ts",
    "src/**/*.pug",
    "src/**/*.css",
    "src/**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@localtypes/*": ["types"],
    "@library/*": ["library"],
    "@middleware/*": ["middleware"],
    "@routes/*": ["routes"],
    "@utils/*": ["utils"]
  }
}