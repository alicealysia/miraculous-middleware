{

  "include": [
    "src/**/*.ts",
    "src/**/*.pug",
    "src/**/*.css"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  }
}